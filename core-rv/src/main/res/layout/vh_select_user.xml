<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<ImageView
		android:id="@+id/imgUserLogo"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:contentDescription="@null"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		/>

	<TextView
		android:id="@+id/tvUserInitials"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toTopOf="@id/imgUserLogo"
		app:layout_constraintBottom_toBottomOf="@id/imgUserLogo"
		app:layout_constraintLeft_toLeftOf="@id/imgUserLogo"
		app:layout_constraintRight_toRightOf="@id/imgUserLogo"
		android:background="@drawable/drw_nav_profile"
		style="@style/YouTrackMainTheme.NavProfileInitials"
		android:visibility="invisible"
		android:gravity="center"
		/>

	<TextView
		android:id="@+id/tvUserName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxLines="1"
		app:layout_constraintTop_toTopOf="@id/imgUserLogo"
		app:layout_constraintBottom_toBottomOf="@id/imgUserLogo"
		app:layout_constraintLeft_toRightOf="@id/imgUserLogo"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		tools:text = "Username"
		style="@style/YouTrackMainTheme.TextViewMediumTitlePrimaryColorRegular"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>