<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="YouTrackMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="YouTrackMainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primary_dark</item>
    </style>

    <style name="YouTrackMainTheme.Btn" >
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/drw_green_btn_selector</item>
    </style>

    <style name="YouTrackMainTheme.Toolbar" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="YouTrackMainTheme.EdtAuth" >
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>

    <style name="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="YouTrackMainTheme.NavProfileText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="YouTrackMainTheme.NavProfileInitials">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="YouTrackMainTheme.TextViewMediumTitlePrimaryColorMedium" parent="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="YouTrackMainTheme.TextViewMediumTitlePrimaryColorRegular" parent="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="YouTrackMainTheme.TextViewMediumTitleGreenColorRegular" parent="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="YouTrackMainTheme.TextViewSmallTitlePrimaryColorRegular" parent="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="YouTrackMainTheme.TextViewMediumTextSecondaryColor" parent="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="YouTrackMainTheme.TextViewSmallTextSecondaryColor" parent="YouTrackMainTheme.TextViewMediumTextPrimaryColor">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="ToolbarFilterSubTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="YouTrackMainTheme.Card">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


</resources>
